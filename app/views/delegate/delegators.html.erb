<div class="jumbotron text-center">
  <h1 class="display-3">MinnowSupport<br/>Delegators:<br/><%= @delegators.count %></h1>
</div>

<div class="container">
	<table id="delegators" class="table table-hover table-striped tablesorter">
		<thead>
			<tr>
				<th>Recipient</th>
				<th>Delegator</th>
				<th>MVests</th>
				<th>SP</th>
				<th>Latest Time Stamp</th>
			</tr>
		</thead>
		<tbody>
			<% @delegators.each_with_index do |delegator, index| %>
				<tr>
					<td><%= link_to delegator["Recipient"], "https://steemit.com/@#{delegator["Recipient"]}" %></td>
					<td><%= link_to delegator["Delegator"], "https://steemit.com/@#{delegator["Delegator"]}" %></td>
					<td><%= delegator["MVests"] %></td>
					<td><%= delegator["SP"].to_i %></td>
					<td><%= delegator["Latest Time Stamp"] %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
